// A launch configuration that launches the extension inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension - Workspace",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "run_env/sample-oe-projects/sample.code-workspace"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        },
        {
            "name": "Run Extension - Sample project 1",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "run_env/sample-oe-projects/project1"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        },
        {
            "name": "Run Extension - Sample project 4 (jsonc)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", 
                "${workspaceFolder}/run_env/sample-oe-projects/project4"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        },
        {
            "name": "Run Extension - SonarTestProject",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "${env:USERPROFILE}\\projets\\sonaroe-test-project"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        },
        {
            "name": "Run Extension - PCT",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "${env:USERPROFILE}\\projets\\pct"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        },
        {
            "name": "Run Extension - SCL",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}", "${env:USERPROFILE}\\projets\\Customers\\Consultingwerk\\SmartComponentLibrary"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        }

    ]
}
